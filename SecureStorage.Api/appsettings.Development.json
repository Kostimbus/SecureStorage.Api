{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=securestorage.db"
  },
  "DatabaseProvider": "sqlite",
  "Jwt": {
    "Issuer": "SecureStorage",
    "Audience": "SecureStorageClients",
    "ExpireMinutes": 60
  },
  "Encryption": {
  },
  "Storage": {
    "BasePath": "data/files",
    "MaxFileSizeBytes": 52428800,
    "AllowedContentTypes": [ "application/pdf", "image/png", "image/jpeg", "text/plain" ],
    "Pbkdf2Iterations": 100000,
    "SaltSize": 16
  }
}
